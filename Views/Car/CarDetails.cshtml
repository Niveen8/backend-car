@model List<Repository>
@{
}
<form method="get" asp-controller="Car" asp-action="search">
    Enter part of Car Make
    <input type="text" name="searchkey" />
    <button type="submit">Search</button>
</form>
<br />
<table class="table table-bordered table-striped">
    <tr>
        <th>CarId</th>
        <th>AdminId</th>
        <th>Car Make</th>
        <th></th>


    </tr>
    @foreach (Repository p in @Model)
    {
        <tr>
            <td>@p.CarId</td>
            <td>@p.AdminId</td>
            <td>@p.Make</td>
            <td><a asp-action="Delete" asp-controller="Car" asp-route-id="@p.CarId">Delete</a></td>

        </tr>
    }
</table>
<br />
<div>
    <a asp-controller="Car" asp-action="add">Add new Car</a>
</div>